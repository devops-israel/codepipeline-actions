{
    "compilerOptions": {
        "strictNullChecks": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "es5",
        "outDir": "./dist/",
        "lib": ["es2015"],
        "moduleResolution": "node"
    },
    "exclude": [
        "src/send-email",
        "src/invoke-lambda",
        "src/slack-post",
        "src/slack-update",
        "src/codepipeline-shared",
        "src/codepipeline-auto",
        "**/*.test.ts",
        "node_modules",
        "layers",
        "dist",
        ".vscode",
        ".serverless"
    ]
}
